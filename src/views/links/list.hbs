            <div class="card text-center">
                <div class="card-body">
                    <h3 class="card-title text-uppercase">
                        {{title}}
                    </h3>
                    <h4>{{money}}</h4>
                    <p class="m-2"> {{description}} </p>
                    <a href="" class="btn btn-danger">Delete Idea</a>
                    <a href="" class="btn btn-secondary">Edit</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>