<div id='listideas' class="container p-4">
    <div class="row">
        {{#each ideas}}
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <h3 class="card-title text-uppercase">
                        {{title}}
                    </h3>
                    <h4>
                        Expected gains: ${{money}}
                    </h4>
                    <p class="m-2">{{description}}</p>
                    <p class="text-muted">
                        {{timeago created_at}}
                    </p>
                    <a class="btn btn-danger" href="/ideas/delete/{{id}}">
                        Delete Idea
                    </a>
                    <a class="btn btn-secondary" href="/ideas/edit/{{id}}">
                        Edit
                    </a>
                </div>
            </div>
        </div>
        {{else}}
            <div class="col-md-4 mx-auto">
                <div class="card card-body text-center">
                    <p>There aren't any ideas saved yet.</p>
                    <a href="/ideas/add">Create One!</a>
                </div>
            </div>
        {{/each}}
    </div>
</div>